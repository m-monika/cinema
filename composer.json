{
    "name": "mentoring/cinema",
    "authors": [
        {
            "name": "Monika",
            "email": "m852.monika@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3.0"
    },
    "autoload": {
        "psr-4": {
            "Cinema\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phan/phan": "^2.6",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.8",
        "ext-ast": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "check-code": [
            "@php ./bin/phan",
            "@php ./bin/phpcs --standard=PSR1,PSR2 tests/",
            "@php ./bin/phpcs --standard=PSR1,PSR2 src/",
            "@php ./bin/phpunit --colors tests"
        ]
    }
}
